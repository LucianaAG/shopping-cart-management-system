{{#if errors}}
<div class="alert alert-danger">
    <ul>
        {{#each errors}}
            <li>{{msg}}</li>
        {{/each}}
    </ul>
</div>
{{/if}}

<form method="POST" action="/product/edit/{{product.product_id}}" enctype="multipart/form-data" id="form_create_product">
    <div class="mb-3">
        <label for="name" class="form-label">Nombre:</label>
        <input type="text" class="form-control" id="name" name="name" value="{{product.name}}">
    </div>

    <div class="mb-3">
        <label for="price" class="form-label">Price:</label>
        <input type="number" step="0.01" class="form-control" id="price" name="price" value="{{product.price}}">
    </div>

    <div class="mb-3">
        <label for="stock" class="form-label">Stock:</label>
        <input type="number" step="1" class="form-control" id="stock" name="stock" value="{{product.stock}}">
    </div>

    <div class="mb-3">
        <label for="minimum_stock" class="form-label">Stock minimo:</label>
        <input type="number" step="1" class="form-control" id="minimum_stock" name="minimum_stock" value="{{product.minimum_stock}}">
    </div>

    <div class="mb-3">
        <label for="image" class="form-label">Imagen:</label>
        <input type="file" class="form-control" id="image" name="image" accept="image/*">
    </div>

    <div>
        <label for="category" class="form-label">Categoría:</label>
        <select name="category" id="category" class="form-select">
            <option value="">Seleccione una categoría</option>
            {{#each categories}}
                <option value="{{this.category_id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>