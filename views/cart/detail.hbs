<h2>Detalle del carrito #{{cart.cart_id}}</h2>

<table class="table">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Cantidad</th>
      <th>Precio Unitario</th>
    </tr>
  </thead>
  <tbody>
    {{#each cart.items}}   {{!-- alias correcto de cart.hasMany --}}
    <tr>
        <td>{{this.product_relation.name}}</td>  {{!-- alias correcto de cart_items.belongsTo(product) --}}
        <td>{{this.amount}}</td>
        <td>${{this.price}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

<a href="/cart/list" class="btn btn-secondary">Volver</a>